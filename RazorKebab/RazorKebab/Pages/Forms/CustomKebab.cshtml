 @page
@model RazorKebab.Pages.Forms.CustomKebabModel
@{
}

<div class="text-center container">
	<h1>Stwórz własnego kebaba!</h1>
	<form method="post" class="mx-auto mt-5 mb-5 px-5 pb-5 pt-5 rounded-5 alert-light col-4">
		<input type="text" asp-for="Kebab.KebabName"
		placeholder="Daj mi nazwę..."/>
		<br/>
		<input type="checkbox" asp-for="Kebab.SpicySauce" placeholder="Ostry sos"/>Ostry sos
		<br/>
		<input type="checkbox" asp-for="Kebab.MildSauce" placeholder="Łagodny sos"/>Łagodny sos
		<br/>
		<input type="checkbox" asp-for="Kebab.MixSauce" placeholder="Mieszany sos"/>Mieszany sos
		<br/>
		<input type="checkbox" asp-for="Kebab.Cheese" placeholder="Ser"/>Ser
		<br/>
		<input type="checkbox" asp-for="Kebab.Fries" placeholder="frytki"/>Frytki
		<br/>
		<input type="checkbox" asp-for="Kebab.DoubleMeat" placeholder="Dodatkowe mięso"/>Dodatkowe mięso
		<br/>
		<input type="checkbox" asp-for="Kebab.Lettuce" placeholder="Szpinak"/>Szpinak
		<br/>
		<input type="checkbox" asp-for="Kebab.Jalapeno" placeholder="Jalapeno"/>Jalapeno
		<br/>
		<button class="btn btn-primary mt-1" type="submit">Zamów kebaba</button>
	</form>
</div>